        "mongoose": "^6.7.2",
        "morgan": "^1.10.0"
    },
    "devDependencies": {
        "cross-env": "^7.0.3",
        "eslint": "^8.28.0",
        "jest": "^29.3.1",
        "nodemon": "^2.0.20",
        "supertest": "^6.3.3"
    },
    "jest": {
